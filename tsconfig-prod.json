{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "target": "es2024",
    "outDir": "dist"
  },
  "include": ["src/*.js", "src/SAJJ/*.js", "src/*.mts", "src/*.cts"],
  "exclude": ["node_modules"]
}
